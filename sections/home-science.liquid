<style>
  .in-side-text {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    margin: 40px 0;
  }
  .text-dox {
    padding-bottom: 40px;
    max-width: 385px;
  }
  .myimage {
    text-align: center;
  }
  .headingabc h2 {
    font-size: 24px;
    font-weight: 400;
    line-height: 30px;
    letter-spacing: 0;
    text-align: center;
  }
  .paraxyz {
    font-family: "Roboto Light"
    , sans-serif;
    font-size: 18px;
    font-weight: 300;
    line-height: 30px;
    letter-spacing: 0.02em;
    text-align: center;
    color: #1C2E3A;
    padding: 0 15px;
  }
  .myimage img {
    max-width: 100%;
    height: auto;
    min-height: 135px;
  }
  .newhe {
    background-color: #1C2E3A;
    width: 60%;
    margin: auto;
    height: 3px;
  }
  @media screen and (max-width:1068px) {
    .text-dox {
    padding: 8px;
    max-width: 385px;
}
.in-side-text {
    gap: 10px;
    margin: 30px 0;
}
  }
  @media screen  and (max-width:927px) {
    .in-side-text {
    grid-template-columns: 1fr 1fr;
}
  }
  @media screen and (max-width:651px){
    .in-side-text {
     grid-template-columns: 1fr; 
}
.text-dox{
  max-width: 100%;
}
  }
</style>
<div class="page-width">
  <div class="in-side-text">
    {% for block in section.blocks %}
      <div class="text-dox" style="background-color: {{block.settings.bb-color }};">
        {% if block.settings.image != blank %}
          <div class="myimage">
            <img loading="lazy" src="{{ block.settings.image |  img_url : 'master' }}">
          </div>
        {% endif %}
        {% if block.settings.head != blank %}
          <div class="headingabc">
            <h2>{{ block.settings.head }}</h2>
          </div>
        {% endif %}
        <hr class="newhe">
        {% if block.settings.par != blank %}
          <div class="paraxyz">
            {{ block.settings.par }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Home Super Science",
    "settings": [],
    "blocks": [
      {
        "type": "image_picker",
        "name": "ADD-text",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "head",
            "label": "heading"
          },
          {
            "type": "richtext",
            "id": "par",
            "label": "para"
          },
          {
            "type": "color",
            "id": "bb-color",
            "label": "Background",
            "default": "#000000"
          }, {
            "type": "color",
            "id": "body_text",
            "label": "Body text",
            "default": "#000000"
          }

        ]
      }
    ],
    "presets": [
      {
        "name": "Home Super Science",
        "category": "Home Hero"
      }
    ]
  }
{% endschema %}