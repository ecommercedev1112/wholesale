<style>
  p.guide-main-2p1 {
    font-size: 18px;
    color: #1C2E3A;
    margin: 0;
    font-family: "Roboto", sans-serif !important;
  }
  h2.guide-main-2h1 {
    font-size: 48px;
    margin: 0;
    color: #1C2E3A;
  }
  .result-maintitle {
    font-size: 24px;
    font-weight: 600;
    color: #1C2E3A;
    font-family: "Roboto", sans-serif !important;
    text-transform: uppercase;
    line-height: 27px;
    height: 100%;
    max-height: 50px;
    margin-top: 30px;
}
  .guide-center {
    text-transform: uppercase;
    letter-spacing: 6px;
  }
  .guide-center1 {
    text-transform: uppercase;
  }
  .fixed-width {
    max-width: 780px;
    margin: auto;
    text-align: center;
  }

  p.result_p {
    font-size: 18px;
    color: #1C2E3A;
    font-family: "Roboto", sans-serif !important;
    height: 100%;
    max-height: 200px;
  }
  a.meanger-set {
    color: #606060;
    font-size: 14px;
    font-family: "Roboto", sans-serif !important;
}
  .result-single-block img {
    max-width: 84px;
  }

  .result-single-block {
    text-align: center;
  }
  .result-single-block {
    max-width: 32%;
  }

  .result-blocks {
    display: flex;
    justify-content: space-between;
    margin: 50px 0;
  }

  .results {
    padding: 30px 0;
  }
  @media only screen and (max-width: 768px) {
    .result-blocks {
      flex-wrap: wrap;
      justify-content: center;
    }
    .result-single-block{
      max-width: 400px;
    }
    .result-blocks {
    gap: 40px;
    }
    p.result_p{
      max-height: none;
      height: max-content;
    }

  }
  @media only screen and (max-width: 500px) {
  h2.guide-main-2h1 {
    font-size: 30px;
  }
    .collection__description.body.rte h1 {
    font-size: 30px;
    line-height: 26px;
}
  }
</style>

<div class="results">
  <div class="page-width">
    <div class="results-main">
      <div class="fixed-width">
        <p class="guide-main-2p1 guide-center">{{ section.settings.first_heading }}</p>
        <h2 class="guide-main-2h1 guide-center1">{{ section.settings.top_heading }}</h2>
        <p class="result_p">{{ section.settings.bottom_p }}</p>
      </div>
    </div>
    <div class="result-blocks">
      {%- for block in section.blocks -%}
        <div class="result-single-block">
          {% if block.settings.image != blank %}
            <img loading="lazy" src="{{ block.settings.image | img_url : 'master' }}">
          {% endif %}
          {% if block.settings.maintitle  != blank %}
          <div class="result-maintitle">{{ block.settings.maintitle }}</div>
          {% endif %}
          {% if block.settings.para != blank %}
          <p class="result_p">{{ block.settings.para }}</p>
          {% endif %}
          {% if block.settings.btntext != blank %}
          <a class="meanger-set" href="{{ block.settings.myurl}}">
             {{ block.settings.btntext }}
          </a>
          {% endif %}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "home Results",
    "settings": [
      {
        "type": "text",
        "id": "first_heading",
        "label": "First Heading",
        "default": "visible"
      }, {
        "type": "text",
        "id": "top_heading",
        "label": "Bold Heading",
        "default": "RESULTS"
      }, {
        "type": "text",
        "id": "bottom_p",
        "label": "Paragraph"
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "label": "Image",
            "id": "image"
          }, 
               
          {
            "type": "text",
            "id": "maintitle",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "para",
            "label": "Block Paragraph",
            "default": "Healthy Hair result within 2-3 months. *"
          },
          {
            "type": "text",
            "id": "btntext",
            "label": "Button text"
          },
          {
            "type": "url",
            "id": "myurl",
            "label": "Button url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "home Results",
        "category": "ADVANCED LAYOUT"
      }
    ]
  }
{% endschema %}