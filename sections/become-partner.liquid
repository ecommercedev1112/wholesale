    button.btn-set-me {
    width: 250px;
    height: 50px;
  }
  @media screen and (min-width:700px) {
    .become-layout {
    margin-top: 50px;
    margin-bottom: 40px;
}
   
  }
  @media screen and (max-width: 993px) {
    .become-layout {
      flex-direction: column;
    }

  }
  @media screen and (max-width: 600px) {
    .become-section-content {
      padding: 30px;
    }
    .become-button a {
      font-size: 13px;
    }
    .become-layout {
    margin: 30px 0px;
    }
  }
