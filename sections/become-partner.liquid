<div class="page-width">
  <div class="become-layout">
    {% for block in section.blocks %}
      <div class="become-section-content">
        {{ block.settings['button-section-content'] }}
        <!-- <a href="{{ block.settings.become-url }}"> {{ block.settings['become-button-text'] }} </a> -->

        <button class="become-button {% if forloop.index ==1 %} btn-min {% endif %} {% if forloop.index ==2 %} btn-min2 {% endif %} ">
          <a href="{{ block.settings.become-url }}">
            {{ block.settings['become-button-text'] }}
          </a>
        </button>
      </div>
    {% endfor %}
  </div>
</div>
