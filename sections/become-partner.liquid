<style>
  .become-section-content {
    flex-direction: column;
    background: #F7F9FB;
    padding: 30px 40px 30px 30px;
    width: 100%;
    display: flex;
    justify-content: space-between;
    row-gap: 20px;
  }

.become-section-content p{
    color: #5C5C5C;
    font-size: 18px;
    font-family: 'Roboto' !important;
}
  .become-button {
    background: #1C2E3A;
    color: white;
    padding: 17px 25px;
  }
  .become-button a {
  font-family: 'Roboto' !important;
    font-size: 16px;
    font-weight: 500;
    line-height: 19px;
    letter-spacing: 0.4em;
    text-align: center;
    text-decoration: none;
    color: white;
  }
  .become-layout {

    display: flex;
    gap: 20px;
  }
  .btn-min2 {
    max-width: 400px;
  }
  .btn-min {
    max-width: 267px;
  }
