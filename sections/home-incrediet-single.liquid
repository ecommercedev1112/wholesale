<style>
  .use-min-container {
  max-width: 900px;
  margin: auto;
  border: 1px solid transparent;
  background-color:#F7F9FB;
  padding: 50px;
  }
  .use-main-title h3 {
  font-size: 36px;
  font-family: auto;
  font-weight: 600;
  text-align: center;
  letter-spacing: 0.5rem;
  line-height: normal;
  }

  .power-scoop-title h3 {
  margin: 0;
  font-size: 30px;
  font-family: auto;
  text-align: center;
  font-weight: 700;
  padding-bottom: 15px;
  }

  .power-scoop-descrription p {
  margin: 0;
  text-align: center;
  font-size: 17px;
  font-family: auto;
  line-height: normal;
  letter-spacing: normal;
  padding-bottom: 15px;
  padding-top: 15px;
  }

  .dosage-text h3, .servings-text h3 {
  margin: 0;
  font-size: 16px;
  font-weight: 600;
  font-family: auto;
  }

  .dosage-cont, .servings-cont {
    display: flex;
    align-items: center;
    gap: 5px;
    justify-content: flex-start;
    width: 38%;
    margin: auto;
  }

  .dosage-quantity p, .servings-quantity p {
  margin: 0;
  }

  span.new-line {
  display: block;
  height: 2px;
  background-color: black;
  width: 60%;
  }

    span.a-new-line {
  display: block;
  height: 1px;
  background-color: grey;
  width: 50%;
  }

  .line-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  }

  .dosage-cont {
  padding-top: 15px;
  }
  @media screen and (max-width: 550px){
  .use-min-container {
  padding: 50px 25px;
  }
  }
</style>
<div class="use-main-container">
  <div class="use-main-title">
    <h3>{{ section.settings.use_title }}</h3>
  </div>
  <div class="use-min-container">
    <div class="use-sub-container">
      <div class="power-scoop-title">
        <h3>{{ section.settings.scoop_title }}</h3>
      </div>
      <div class="line-bottom">
        <span class="new-line"></span>
      </div>
      <div class="power-scoop-descrription">{{ section.settings.scoop_description }}</div>
      <div class="line-bottom">
        <span class="a-new-line"></span>
      </div>
      <div class="dosage-main-new">
      <div class="dosage-cont">
        <div class="dosage-text">
          <h3>{{ section.settings.dosage_text }}</h3>
        </div>
        <div class="dosage-quantity">
          <p>{{ section.settings.dosage_quantity }}</p>
        </div>
      </div>
      </div>
      <div class="servings-cont">
        <div class="servings-text">
          <h3>{{ section.settings.servings_text }}</h3>
        </div>
        <div class="servings-quantity">
          <p>{{ section.settings.servings_quantity }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "How To Use",
"settings": [
{
"type": "text",
"id": "use_title",
"label": "How To Use"
},
{
"type": "text",
"id": "scoop_title",
"label": "Title"
},
{
"type": "richtext",
"id": "scoop_description",
"label": "Description"
},
{
"type": "text",
"id": "dosage_text",
"label": "Dosage"
},
{
"type": "text",
"id": "dosage_quantity",
"label": "Dosage Quantity"
},
{
"type": "text",
"id": "servings_text",
"label": "Daily Servings"
},
{
"type": "text",
"id": "servings_quantity",
"label": "Daily Servings Quantity"
}
],
"presets": [
{
"name": "home incredient How To Use"
}
]
}
{% endschema %}
