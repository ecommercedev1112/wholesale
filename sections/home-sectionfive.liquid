      .in-side-seaction{
        grid-template-columns: 1fr 1fr;
        column-gap: 20px;
        row-gap: 20px;
      }
    }
  @media screen and (max-width: 768px) {
    .in-side-para {
      min-height: unset;
    }
    .in-side-para p {
