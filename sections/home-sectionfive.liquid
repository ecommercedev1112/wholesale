    grid-template-columns: 1fr 1fr 1fr;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    margin: 60px 0px;
  }
  .in-side-image {
    display: flex;
}
  .inside-butt {
    background: #1C2E3A;
    padding: 13px 25px;
    color: #fff;
    font-family: "Roboto"
    , sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 18.85px;
    text-align: left;
    text-decoration: none;
    border: none;
