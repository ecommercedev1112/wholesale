    }
    .in-side-para p {
      font-size: 17px;
      margin-bottom: 20px;
    }
      .inside-text {
    padding: 26px 15px;
  }
        .in-side-para p {
      padding: 5px 0;
      line-height: 26px;
    }
    .in-side-para {
    padding-top: 20px;
    margin-bottom: 12px !important;
}
    .in-side-seaction {
    row-gap: 40px;
}
  }
