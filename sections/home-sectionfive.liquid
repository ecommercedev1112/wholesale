<div class="page-width">
  <div class="in-side-seaction">
    {% for block in section.blocks %}
      <div class="in-side-dox" style="background-color: {{block.settings.bb-color }};">
        {% if block.settings.image != blank %}
          <div class="in-side-image">
            <img loading="lazy" src="{{ block.settings.image |  img_url : 'master' }}">
          </div>
        {% endif %}
        <div class="inside-text">
          <div class="inside-heading">
            {% if block.settings.head != blank %}
              <h2>{{ block.settings.head }}</h2>
            {% endif %}
          </div>
          <div class="in-side-para">
            {% if block.settings.par != blank %}
              {{ block.settings.par }}
            {% endif %}
          </div>
          {% if block.settings.butt != blank %}
            <a class="inside-butt" href="{{ block.settings.butt_link }}">{{ block.settings.butt }}</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Home Main Page",
    "settings": [],
    "blocks": [
      {
        "type": "image_picker",
        "name": "ADD-text",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "head",
            "label": "heading"
          },
          {
            "type": "richtext",
            "id": "par",
            "label": "para"
          },
          {
            "type": "color",
            "id": "bb-color",
            "label": "Background",
            "default": "#000000"
          }, {
            "type": "text",
            "id": "butt",
            "label": "button"
          }, {
            "type": "url",
            "id": "butt_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Main Page",
        "category": "Home Main Page"
      }
    ]
  }
{% endschema %}