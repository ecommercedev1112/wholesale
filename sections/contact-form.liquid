<div class="col-lg-6">
  <p class="form_heading">Please fill the form to contact us</p>
  <div id="hubspot-form-container" class="contact__fields"></div>
  <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js"></script>
  <script>
    hbspt.forms.create({
      region: "na1",
      portalId: "7050579",
      formId: "1fa093df-0e10-44aa-87d5-578f74cbaf04",
      target: "#hubspot-form-container",
      onFormReady: function() {
        var formContainer = document.querySelector('#hubspot-form-container');
        var inputs = formContainer.querySelectorAll('input, textarea, button');
        
        inputs.forEach(function(input) {
          input.classList.add('field__input');
        });

        var textAreas = formContainer.querySelectorAll('textarea');
        textAreas.forEach(function(textarea) {
          textarea.classList.add('text-area');
        });

        var buttons = formContainer.querySelectorAll('button');
        buttons.forEach(function(button) {
          button.classList.add('button');
        });

        var submitButton = formContainer.querySelector('.hs-button');
        submitButton.classList.add('hs-button');

        var errorFields = formContainer.querySelectorAll('.hs-error-msg');
        errorFields.forEach(function(errorField) {
          errorField.closest('.field').classList.add('field--with-error');
        });
      }
    });
  </script>
</div>
</div>

