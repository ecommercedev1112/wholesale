<style>
.main-cilca {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
}
.inner-ain-slica {
    background: #F7F9FB;
    padding: 30px;
}
.inner-silica {
    background: #F7F9FB;
}
.tet-slica {
    font-family: "Gloock", serif;
    font-weight: 400;
    font-style: normal;
    font-size: 24px;
    color: #1C2E3A;
}
.content-slice {
    font-family: "Roboto", sans-serif !important;
    font-style: normal;
    font-size: 18px;
    color: #1C2E3A;
    width: 100%;
    max-width: 501px;
}
.slicea-links a {
    color: #606061;
    font-family: "Roboto", sans-serif !important;
    font-style: normal;
    font-size: 14px;
    padding-bottom: 2px;
    font-weight: 400;
}
.iamge-slice img {
    width: 100%;
    height: auto;
}
@media screen and (max-width:769px) {
    .main-cilca {
    grid-template-columns: 1fr;
}
}
@media screen and (max-width:500px) {
  .inner-ain-slica {
    padding: 10px;
}
.tet-slica {
  font-size: 20px;
}
.content-slice{
  letter-spacing: 1px;
  margin-bottom: 10px;
  margin-top: 10px;
}
}
</style>
<div class="">
  <div class="page-width">
    <div class="main-cilca">
      {%- for block in section.blocks -%}
        <div class="inner-silica">
            {% if  block.settings.image  != blank %}
          <div class="iamge-slice">
            <img loading="lazy" src={{ block.settings.image | img_url : 'master' }} />
          </div>
            {% endif %}
          <div class="inner-ain-slica">
          <div class="tet-slica">
            {{ block.settings.types_of_silica }}
          </div>
          <div class=" content-slice">
            {{ block.settings.content }}
          </div>
          <div class="slicea-links">
            <a href={{ block.settings.button_link }}>
              {{ block.settings.button_text }}
            </a>
          </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Home Types Of Silica",
    "settings": [],
    "blocks": [
      {
        "name": "Home Types Of Silica",
        "type": "home_types_of_silica",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "types_of_silica",
            "label": "Types Of Silica",
            "default": "Types Of Silica"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Content",
            "default": "Silica supplements offer a diverse range of options. Explore their distinct compositions and benefits for your wellness journey."
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Previous Article"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Types Of Silica"
      }
    ]
  }
{% endschema %}