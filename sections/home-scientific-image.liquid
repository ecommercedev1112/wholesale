      @media only screen and (max-width: 1100px){
        .safety-b2 img {
    object-fit: cover;
    width: 100%;
    max-width: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
}

.safety-b2 {
    width: 36%;
}
      }
  @media only screen and (max-width: 980px){
    .safety-blocks {
    flex-direction: column;
    align-items: center;
}

.block-safety1 {
    width: 100%;
}

.safety-b1 p {
    max-width: 100%;
}

.safety-b1 h2 {
    max-width: 100%;
}

.safety-b1 {
    text-align: center;
}

.safety-b1::before {left: 44%;}

.block-safety3 {
    width: 100%;
}

.safety-b3 p {
    max-width: 100%;
}

.safety-b3 h2 {
    max-width: 100%;
}

.safety-b3 {
    text-align: center;
}

.safety-b3::before {
    right: 44%;
}
    .safety-b2 img {
    max-width: 100%;
}
  }
    @media only screen and (max-width: 500px){
      .safety-b3 p {
        margin:0;
        font-size:17px;
        line-height:26px;
      }
      h2.guide-main-2h1 {
    font-size: 32px;
}
.safety-b1::before {
    left: 0%;
}
p.guide-main-2p1 {
    font-size: 14px;
}
.safety-b3::before {
    right: 0%;
}
p.result_p {
    font-size: 14px;
}
.tabcontent {
    margin: auto;
}

.tabcontent img {
    width: 100%;
    max-width: 100px !important;
}

.percentage_row {
    margin: auto;
    display: flex;
    justify-content: center;
}

.percentage_row img {
    width: 100%;
    max-width: 100px;
}
    }
</style>


