<style>
  .points-main-container {
    position: relative;
    background: {{ section.settings.year-points-bg }};
    padding-top: 40px;
  }

  img.background-clr {
    width: 100%;
    height: auto;
  }

  .background-colr {
    display: flex;
  }

  .points-position-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: 1100px;
    margin: auto;
  }

  .points-text p {
    margin: 0;
    styleName: Pre-Title;
    font-family: "Roboto", sans-serif !important;
    font-size: 18px;
    font-weight: 400;
    line-height: 21px;
    letter-spacing: 0.33em;
    text-align: center;
    color: black;
  }

  .points-title h2 {
    margin: 0;
    font-family: "Roboto", sans-serif !important;
    font-size: 48px;
    font-weight: 400;
    line-height: 60px;
    letter-spacing: 0.11em;
    text-align: center;
    color: black;
    text-transform: uppercase;
  }
  .points-title p strong {
    color: white;
  }
  .points-title strong {
    color: #464646;
    font-weight: 600;
  }

  .points-text-year p {
    margin: 0;
    font-family: "Roboto", sans-serif !important;
    font-size: 22px;
    font-weight: 400;
    line-height: 26px;
    letter-spacing: 0;
    text-align: center;
    color: black;
  }

  .points-book-title p {
    margin: 0;
    font-family: "Roboto", sans-serif !important;
    font-size: 14px;
    font-weight: 600;
    line-height: 16px;
    letter-spacing: 0;
    text-align: center;
    color: white;
  }

  .points-min-container {
    display: flex;
    align-items: center;
    gap: 15px;
  }


  .points-book-title {
    padding-bottom: 25px;
  }

  .points-icon-image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .points-icon-image-1,
  .points-icon-image-2,
  .points-icon-image-3,
  .points-icon-image-4 {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  .points-icon-image-1::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(53%, -50%);
    width: 90%;
    height: 2px;
    background-color: white;
  }
  .points-icon-image-2:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(58%, -50%);
    width: 99%;
    height: 2px;
    background-color: white;
  }


  .points-min-sub {
    position: relative;
   width: 100%;
  }

  div#setline {
    text-align: center;
  }


  div#setline:after {
    content: "";
    background-image: url(https://cdn.shopify.com/s/files/1/0818/8120/2973/files/Line_49.png?v=1708375633);
    background-repeat: no-repeat;
    width: 80%;
    background-size: 100% 100px;
    height: 1px;
    top: 43px;
    position: absolute;
    margin: auto;
    left: 65%;
  }

  .points-min-sub:last-child div#setline:after {
    background-image: unset !important;
    }
  .points-icon-image-3:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(50%, -50%);
    width: 95%;
    height: 2px;
    background-color: white;
  }
  .points_content_text {
    color: #1C2E3A;
    text-align: center;
    max-width: 808px;
    font-family: "Roboto Light", sans-serif !important;
    font-size: 18px;
    font-weight: 400;
    line-height: 30px;
    letter-spacing: 0;
    text-align: center;
  }
  .points-min-container{
    width: 100%;
  }
  @media screen and (max-width:1100px) {
    .points-min-sub {
      width: 100%;
    }

  }

  @media screen and (max-width: 721px) {
    img.background-clr {
      min-height: 500px;
    }
    .points-book-title {
      min-height: 100px;
      padding-bottom: 0;
    }
    .points-text p , .points-title p , .points_content_text p{
      text-align: start;
      font-size: 21px;
    }
  }
  @media screen and (max-width: 535px) {
    img.background-clr {
      min-height: 366px;
    }
    .points-text p {
      font-size: 18px;
    }
    .points_content_text p{
      font-size: 17px;
      margin-top:0px;
    }
    .points-title p{
      line-height: 30px;
      font-size: 26px;
      letter-spacing: 1px;
    }
    .points-book-title p {
      font-size: 12px;
      margin-top: 10px;

    }
    div#setline:after{
      left: 75%;
    }
    .points-title h2 {
    font-size: 26px;
}

.points-text p {
    text-align: center;
}
  }

  @media screen and (max-width: 425px) {
  .points_content_text {
    line-height: 26px;
  }
    .points-icon-image-1,
    .points-icon-image-2,
    .points-icon-image-3,
    .points-icon-image-4 {
      display: none;
    }
    .points-min-container {
      justify-content: center;
      gap: 0;
    }
    .points-book-title {
      min-height: auto;
    }
    img.icn-img {
    max-width: 100%;
    height: auto;
}
    .points-min-sub {
     width: 100%;
      margin: 10px;
    }
  }
  @media screen and (max-width:900px) {
    .points-min-sub {
  width: 100%;
    }
  }
  @media screen and (max-width: 721px) {
    .points-min-sub {
  width: 100%;
    }
    .points-text-year p {
    font-size: 17px;
    }
  }

</style>
<div class="points-main-container page-width">
  <div class="background-colr">
    <div class="background-clr"></div>

  </div>
  <div class="points-position-container">
    <div class="points-main-sub">
      <div class="points-text">
        <p>{{ section.settings.points_text }}</p>
      </div>
      <div class="points-title">
        {{ section.settings.points_title }}
      </div>
      <div class="points_content_text">
        {{ section.settings.points_content_text }}
      </div>
    </div>
    <div class="points-min-container">
      {% for block in section.blocks %}
        <div class="points-min-sub" data-point-active="{{ forloop.index0 }}">
          <div class="points-text-year">
            <p>{{ block.settings.points_text_year }}</p>
          </div>

          <div class="icn-image-{{ forloop.index }}" id="setline">
            <img loading="lazy"
      class="icn-img nes-spoint {% if forloop.index >= 2 %} all_imageicons {% endif %}"
              data-index="{{ forloop.index0 }}"
              src="{{ block.settings.icn_image | image_url }}">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
   $(document).ready(function () {
      $("img.icn-img").click(function () {
        $(".points-min-sub").removeClass("activepoints");
        $(this).parents(".points-min-sub").addClass("activepoints");
          $("img.icn-img").attr("src","https://cdn.shopify.com/s/files/1/0788/5622/5075/files/Group_53_2d9cdcf0-5512-45e3-b6bf-8c8e81bd7a82.png?v=1708377415")
          $(this).attr("src","https://cdn.shopify.com/s/files/1/0788/5622/5075/files/Ellipse_130_6f7da482-4640-4beb-89cf-4ddffd9e1423.png?v=1709319154")
          let index = $(this).attr("data-index");
          index = +index;
          swiper.slideTo(index);
      })
      $(".slider-buttonsxx").click(function () {
    setTimeout(function () {
        var bottomslideractive = $(".min-sub-container.swiper-slide.swiper-slide-active").attr("data-slider");
        $(".points-min-sub").removeClass("activepoints");
        $(`.points-min-sub[data-point-active="${bottomslideractive}"]`).addClass("activepoints");
        $(`.points-min-sub[data-point-active="${bottomslideractive}"]`).find("img.icn-img").click();
    }, 500);
});

  })
</script>
{% schema %}
  {
    "name": "Home  Super point",
    "settings": [
      {
        "type": "color",
        "label": "section background color",
        "id": "year-points-bg"
      },
      {
        "type": "text",
        "id": "points_text",
        "label": "Title"
      }, {
        "type": "richtext",
        "id": "points_title",
        "label": "Sub Title"
      },
      {
        "type": "richtext",
        "id": "points_content_text",
        "label": "content Text"
      }
    ],
    "blocks": [
      {
        "name": "Book",
        "type": "content",
        "settings": [
          {
            "type": "text",
            "id": "points_text_year",
            "label": "Year"
          }, {
            "type": "image_picker",
            "id": "icn_image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home  Super point"
      }
    ]
  }
{% endschema %}