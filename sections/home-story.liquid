<style>
  .story-main-container {
  position: relative;
  }

  img.background-img {
  width: 100%;
  height: auto;
  }

  .background-image {
  display: flex;
  }

  .position-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  max-width: 1100px;
  margin: auto;
  }

  .story-text p {
  margin: 0;
  styleName: Pre-Title;
  font-family: Roboto;
  font-size: 18px;
  font-weight: 400;
  line-height: 21px;
  letter-spacing: 0.33em;
  text-align: center;
  color: white;
  }

  .story-title p {
  margin: 0;
  styleName: Heading H2;
  font-family: Gloock;
  font-size: 48px;
  font-weight: 400;
  line-height: 60px;
  letter-spacing: 0.11em;
  text-align: center;
  color: white;
  }
  .story-title p strong {
    color: white;
}
  .story-title strong {
  color: #464646;
  font-weight: 600;
  }

  .story-text-year p {
  margin: 0;
  font-family: Roboto;
  font-size: 22px;
  font-weight: 400;
  line-height: 26px;
  letter-spacing: 0em;
  text-align: center;
  color: white;
  }

  .story-book-title p {
  margin: 0;
  font-family: Roboto;
  font-size: 14px;
  font-weight: 600;
  line-height: 16px;
  letter-spacing: 0em;
  text-align: center;
  color: white;
  }

  .story-min-container {
  display: flex;
  align-items: center;
  gap: 15px;
  }



  .story-book-title {
  padding-bottom: 25px;
  }

  .icon-image {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  }
  .icon-image-1 ,   .icon-image-2 ,   .icon-image-3 ,  .icon-image-4 {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
  .icon-image-1::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(72%, -50%);
    width: 79%;
    height: 2px;
    background-color: white;
  }
  .icon-image-2:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(58%, -50%);
    width: 99%;
    height: 2px;
    background-color: white;
}
.icon-image-3:after {
   content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(77%, -50%);
    width: 75%;
    height: 2px;
    background-color: white;
}
.story-min-container{
  width: 100%;
}
@media screen and (max-width:721px) {
    img.background-img {
    min-height: 500px;
}
.story-book-title {
    min-height: 100px;
    padding-bottom: 0;
}
}
@media screen and (max-width:535px) {
    img.background-img {
    min-height: 366px;
}
.story-title p {
    font-size: 34px;
}
.story-book-title p {

    font-size: 12px;
    margin-top: 10px;

}
.story-min-container{
  gap: 5px;
}
}
@media screen and (max-width:425px) {
    /* .icon-image-1, .icon-image-2, .icon-image-3, .icon-image-4{
        display: none;
    } */
.story-book-title {
  

}
.story-min-sub {
    max-width: 140px;
    margin: 10px;
}
.story-book-title p {
    font-size: 10px;
    margin-top: 10px;
}
.story-min-sub{
  max-width: 100%;
  margin: 0;
}
.story-title p {
    font-size: 31px;
}
.story-text-year p{
  font-size: 18px;
}
}
</style>
<div class="story-main-container">
  <div class="background-image">
    <img loading="lazy" class="background-img" src="{{ section.settings.background_image | image_url }}">
  </div>
  <div class="position-container">
    <div class="story-main-sub">
      <div class="story-text">
        <p>{{ section.settings.story_text }}</p>
      </div>
      <div class="story-title">
        {{ section.settings.story_title }}
      </div>
    </div>
    <div class="story-min-container">
      {% for block in section.blocks %}
        <div class="story-min-sub" data-pointsnew="{{ forloop.index0 }}">
          <div class="story-text-year">
            <p>{{ block.settings.story_text_year }}</p>
          </div>
          <div class="story-book-title et"  >{{ block.settings.story_book_title }}</div>
          <div class="icon-image-{{ forloop.index }}" id="setlinexx">
            <img loading="lazy" class="icon-img"  data-index="{{ forloop.index0 }}" src="{{ block.settings.icon_image | image_url }}">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
 $(document).ready(function () {
    $("img.icon-img").click(function () {
      $(".story-min-sub").removeClass("activepoints");
        $("img.icon-img").attr("src","//b7c4c8.myshopify.com/cdn/shop/files/Group_53_30e6976c-106e-468a-8232-8efc69b1a837.png?v=1707771205")
        $(this).attr("src","https://b7c4c8.myshopify.com/cdn/shop/files/Ellipse_130_6f7da482-4640-4beb-89cf-4ddffd9e1423.png?v=1709319154")
        let index = $(this).attr("data-index");
        index = +index;
        swiper.slideTo(index);
    })
    $(".slider-buttonsxx").click(function () {
    setTimeout(function () {
        var bottomslideractive = $(".min-sub-container.swiper-slide.swiper-slide-active").attr("data-new");
        $(".story-min-sub").removeClass("activepoints");
        $(`.story-min-sub[data-pointsnew="${bottomslideractive}"]`).addClass("activepoints");
        $(`.story-min-sub[data-pointsnew="${bottomslideractive}"]`).find("img.icon-img").click();
    }, 500);
});

})
</script>
