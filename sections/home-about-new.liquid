    font-size: 18px;
    font-weight: 300;
    line-height: 30px;
    letter-spacing: 0.02em;
    text-align: left;
    margin-top: 0;
  }
  .percentage_box {
    width: 23%;
  }
  .percentage_row {
    gap: 10px;
    flex-wrap: wrap;
    display: flex;
  }
  {% if section.settings.img_alignment == 'right' %}
    .l_sl_container{{ section.id }} {
      flex-direction: row-reverse;
    }
  {% endif %}
