<style>
  .sl_img_column {
    width: 48%;
    margin:auto;
  }
  .l_sl_container{{ section.id }} {
    flex-wrap: wrap;
    gap: 30px;
    display: flex;

  }
  section.lsl_img_section {
    align-items: center;
    flex-direction: column;
    display: flex;
    padding-top: {{ section.settings.p_t }}px;
    padding-bottom: {{ section.settings.p_b }}px;
  }
  .sl_content_column {
    justify-content: center;
    width: 48%;
    flex-direction: column;
    display: flex;
    margin:auto;
  }
  .percentage_row {
    padding: 15px 0;
    display: flex;
  }
  p.sltop_heading {
    margin-bottom: 10px;
    font-family: "Roboto";
    font-size: 16px;
    font-weight: 300;
    line-height: 19px;
    letter-spacing: 0.46em;
    text-align: left;
  }
  h2.sl_omg_heading {
    font-family: "Gloock", serif;
    font-weight: 400;
    font-style: normal;
    font-size: 48px;
    font-weight: 400;
    line-height: 60px;
    letter-spacing: 0.11em;
    text-align: left;
    margin: 0;
  }
  span.doctor_info {
    font-family: "Roboto";
    font-size: 20px;
    font-weight: 500;
    line-height: 34px;
    letter-spacing: 0.02em;
    text-align: left;
    color: #3C6683;
    margin: 10px 0;
  }
  .doctor_info p {
    margin: 0 !important;
  }

  p.other_text {
