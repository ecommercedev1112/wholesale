      }
    ],
    "blocks": [
      {
        "type": "bl_text",
        "name": "Blue Text",
        "settings": [
          {
            "type": "richtext",
            "id": "bl_text",
            "label": "Text"
          }, {
            "type": "checkbox",
            "id": "bl_line",
            "label": "Left Line",
            "default": true
          }
        ]
      },
      {
        "type": "g_text",
        "name": "Text",
        "settings": [
          {
            "type": "textarea",
            "label": "Text",
            "id": "g_texts"
          }
        ]

      },
      {
        "type": "p_box",
        "name": "Percentage",

        "settings": [
          {
            "type": "image_picker",
            "label": "Percentage",
            "id": "p_img"
          },
          {
          "type": "html",
          "id": "svg1",
          "label": "SVG Image 1"
        },
          {
            "type": "text",
            "id": "p_text",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "label": "Percentage",
            "id": "p_img1"
          },
                    {
          "type": "html",
          "id": "svg2",
          "label": "SVG Image 2"
        },
          {
            "type": "text",
            "id": "p_text1",
            "label": "Text"
          }, {
            "type": "image_picker",
            "label": "Percentage",
            "id": "p_img2"
          }, 
                    {
          "type": "html",
          "id": "svg3",
          "label": "SVG Image 3"
        },
          {
            "type": "text",
            "id": "p_text2",
            "label": "Text"
          }, {
            "type": "image_picker",
            "label": "Percentage",
            "id": "p_img3"
          }, 
          {
          "type": "html",
          "id": "svg4",
          "label": "SVG Image 4"
        },
          {
            "type": "text",
            "id": "p_text3",
            "label": "Text"
          }
        ]
      },
      {
        "type": "bl_btn",
        "name": "Buttons",
        "settings": [
          {
            "type": "text",
            "label": "Blue Button Label",
            "id": "bl_label"
          }, {
            "type": "url",
            "label": "Blue url",
            "id": "b_url"
          }, {
            "type": "text",
            "label": "White Button Label",
            "id": "w_label"
          }, {
            "type": "url",
